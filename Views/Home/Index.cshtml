@{
    ViewData["Title"] = "Movie Lookup";
}

<div class="row">
    <div class="col-12">
        <h2>@ViewData["Title"]</h2>
        <form method="POST" action="movies" id="movieForm">
            <div class="input-group my-3">
                <input type="search" name="query" class="form-control" placeholder="Search for Movie Name" aria-label="Search for Movie Name">
                <div class="input-group-append">
                    <button class="btn btn-dark" type="submit" form="movieForm">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div id="results" class="col-12">
        <hr>
        <table class="table table-striped table-dark table-hover">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Release Date</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
